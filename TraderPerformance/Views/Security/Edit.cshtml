@model Security

@{
    var portfolioId = ViewData["PortfolioId"] as Guid?;
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Edit Security</h2>

    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label for="Symbol">Symbol:</label>
            <input type="text" class="form-control" id="TickerSymbol" name="TickerSymbol" value="@Model.TickerSymbol" required>
        </div>
        <div class="form-group">
            <label for="Name">Name:</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required>
        </div>
        <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Save</button>
        <a href="@Url.Action("Index", new {portfolioId = portfolioId})" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back to List</a>
    </form>
</div>
