@model Security

@{
    var portfolioId = ViewData["PortfolioId"] as Guid?;

    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Delete Security</h2>

    <div class="alert alert-danger">
        Are you sure you want to delete this security?
    </div>

    <dl class="row">
        <dt class="col-sm-2">Symbol</dt>
        <dd class="col-sm-10">@Model.TickerSymbol</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
        <a href="@Url.Action("Index", new {portfolioId = portfolioId})" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back to List</a>
    </form>
</div>