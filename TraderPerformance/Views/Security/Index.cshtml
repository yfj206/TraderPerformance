@model IEnumerable<TraderPerformance.Models.Security>

@{
	var portfolioId = ViewData["PortfolioId"] as Guid?;
	ViewData["Title"] = "Securities";
}

<div class="container mt-5">
	<h2 class="text-center mb-4">Securities</h2>

	<div class="row">
		<div class="col">
			<a href="@Url.Action("Create", new { portfolioId = portfolioId} )" class="btn btn-primary mb-3"><i class="bi bi-plus"></i> Add New</a>
		</div>
	</div>

	<div class="row">
		<div class="col">
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Symbol</th>
						<th>Name</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var security in Model)
					{
						<tr>
							<td>@security.TickerSymbol</td>
							<td>@security.Name</td>
							<td>
								<a href="@Url.Action("Edit", new { id = security.Id })" class="btn btn-secondary btn-sm"><i class="bi bi-pencil"></i> Edit</a>
								<a href="@Url.Action("Delete", new { id = security.Id })" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Delete</a>
							</td>

						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
	<div class="row mt-3">
		<div class="col-md-6 offset-md-3">
			<a href="@Url.Action("Index", "Dashboard", new {portfolioId = portfolioId})" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back</a>
		</div>
	</div>
</div>
