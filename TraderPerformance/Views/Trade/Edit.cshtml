@model TraderPerformance.Models.Trade

@{
    ViewData["Title"] = "Edit";
    var portfolioId = ViewData["PortfolioId"] as Guid?;
    Model.PortfolioID = portfolioId;
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="PortfolioID" />
                        <input type="hidden" asp-for="UserId" />
                        <div class="mb-3">
                            <label asp-for="SecurityID" class="form-label">Security</label>
                            <select asp-for="SecurityID" class="form-control" asp-items="ViewBag.SecurityID"></select>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Type" class="form-label">Quantity</label>
                            <input asp-for="Type" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Quantity" class="form-label">Quantity</label>
                            <input asp-for="Quantity" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">Price</label>
                            <input asp-for="Price" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Date" class="form-label">Date</label>
                            <input type="date" asp-for="Date" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
